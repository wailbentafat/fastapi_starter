{
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/venv/bin/python",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.addHoverSummaries": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.indexing": true,
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.logLevel": "Error",
  "python.analysis.completeFunctionCalls": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionParameterTypes": true,
  "python.analysis.inlayHints.variableParameterTypes": true,
  "python.analysis.inlayHints.functionReturnTypesStyle": "plain",
  "python.analysis.inlayHints.variableTypesStyle": "plain",
  "python.analysis.inlayHints.functionParameterTypesStyle": "plain",
  "python.analysis.inlayHints.variableParameterTypesStyle": "plain",
  "python.analysis.inlayHints.functionReturnTypesEnabled": true,
  "python.analysis.inlayHints.variableTypesEnabled": true,
  "python.analysis.inlayHints.functionParameterTypesEnabled": true,
  "python.languageServer":"Pylance",
  "python.analysis.extraPaths": [
    "./backend/src"
  ],

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never",
      "source.fixAll": "always"
    }
  },

  "ruff.path": [
    "${workspaceFolder}/backend/venv/bin/ruff"
  ],
  "postman.settings.dotenv-detection-notification-visibility": false
}